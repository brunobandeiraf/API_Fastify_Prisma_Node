generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model faz referência as tabelas no db
// User será o nome da tabela 
// uuid é um id universalmente único
// @@map irá renomear a tabela no db
model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String?

  department   Department @relation(fields: [department_Id], references: [id])
  department_Id String

  @@map("users")
}

model Department {
  id   String @id @default(uuid())
  name String

  users User[] // Usuário pode ter vários Departamentos

  @@map("departments")
}
